{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-p \"build:*\"",
    "build:server": "tsc -p tsconfig.server.json",
    "build:remix": "remix build",
    "dev": "run-p \"dev:*\"",
    "dev:node": "cross-env NODE_ENV=development nodemon --require dotenv/config ./server/main.ts",
    "dev:remix": "remix watch",
    "start": "cross-env NODE_ENV=production node ./build/server/main.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/node": "^1.14.3",
    "@remix-run/react": "^1.14.3",
    "@types/node": "^18.15.3",
    "cross-env": "^7.0.3",
    "koa": "^2.14.1",
    "koa-logger": "^3.2.1",
    "koa-static": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-koa-adapter": "^1.0.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.14.3",
    "@remix-run/eslint-config": "^1.14.3",
    "@types/koa": "^2.13.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-static": "^4.0.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "dotenv": "^16.0.3",
    "eslint": "^8.36.0",
    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=18"
  }
}
