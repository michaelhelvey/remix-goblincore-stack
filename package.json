		"happy-dom": "^8.9.0",
		"husky": "^8.0.3",
		"nodemon": "^2.0.21",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.4",
		"ts-node": "^10.9.1",
		"ts-toolbelt": "^9.6.0",
		"typescript": "^4.8.4",
		"vite": "^4.1.4",
