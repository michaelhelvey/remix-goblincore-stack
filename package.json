{
	"name": "remix-goblincore-stack",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"local-setup": "./scripts/getting_started.sh",
		"build": "remix build",
		"dev": "remix dev",
		"start": "remix-serve ./build/index.js",
		"typecheck": "tsc",
		"db:makemigrations": "drizzle-kit generate:pg",
		"db:migrate": "tsx ./src/drizzle/migrate.ts",
		"lint": "eslint .",
		"test": "vitest",
		"test:e2e": "playwright test",
		"format": "prettier --write --ignore-unknown .",
		"shadn": "pnpm dlx shadcn-ui@latest",
		"validate": "pnpm lint && pnpm run test --run && pnpm test:e2e && pnpm run build && pnpm typecheck",
		"prepare": "pnpm dlx husky install"
	},
	"packageManager": "pnpm@8.10.5",
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown",
		"*.{ts,tsx,js,jsx}": "eslint --fix"
	},
	"prettier": "@michaelhelvey/prettier-config",
	"eslintConfig": {
		"ignorePatterns": [
			"build",
			"remix.config.js",
			"tailwind.config.js"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module",
			"ecmaFeatures": {
				"jsx": true
			},
			"tsconfigRootDir": ".",
			"project": "./tsconfig.json"
		},
		"env": {
			"jest": true,
			"browser": true,
			"node": true
		},
		"plugins": [
			"@typescript-eslint",
			"jest",
			"react",
			"jsx-a11y",
			"testing-library",
			"jest-dom"
		],
		"extends": [
			"@michaelhelvey/eslint-config/base",
			"plugin:jest/recommended",
			"plugin:react/jsx-runtime",
			"plugin:react-hooks/recommended",
			"plugin:jsx-a11y/recommended",
			"plugin:testing-library/react",
			"plugin:jest-dom/recommended"
		],
		"settings": {
			"jest": {
				"version": 28
			},
			"react": {
				"version": "detect"
			}
		},
		"overrides": [
			{
				"files": [
					"**/e2e/**"
				],
				"rules": {
					"testing-library/prefer-screen-queries": 0
				}
			}
		]
	},
	"dependencies": {
		"@isaacs/express-prometheus-middleware": "^1.2.1",
		"@radix-ui/react-slot": "^1.0.2",
		"@remix-run/express": "^2.3.0",
		"@remix-run/node": "^2.3.0",
		"@remix-run/react": "^2.3.0",
		"@remix-run/serve": "^2.3.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.0.0",
		"compression": "^1.7.4",
		"dotenv": "^16.3.1",
		"drizzle-orm": "^0.29.0",
		"drizzle-zod": "^0.5.1",
		"express": "^4.18.2",
		"got": "^13.0.0",
		"isbot": "^3.7.1",
		"lucide-react": "^0.292.0",
		"morgan": "^1.10.0",
		"pino": "^8.16.2",
		"postgres": "^3.4.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"source-map-support": "^0.5.21",
		"tailwind-merge": "^2.0.0",
		"tailwindcss-animate": "^1.0.7",
		"tsx": "^4.1.3",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@michaelhelvey/eslint-config": "^1.0.1",
		"@michaelhelvey/prettier-config": "^1.0.0",
		"@playwright/test": "^1.40.0",
		"@remix-run/dev": "^2.3.0",
		"@remix-run/eslint-config": "^2.3.0",
		"@testing-library/jest-dom": "^6.1.4",
		"@testing-library/react": "^14.1.2",
		"@types/compression": "^1.7.5",
		"@types/express": "^4.17.21",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.9.2",
		"@types/react": "^18.2.37",
		"@types/react-dom": "^18.2.15",
		"@types/source-map-support": "^0.5.10",
		"@vitejs/plugin-react": "^4.2.0",
		"@vitest/coverage-v8": "^0.34.6",
		"drizzle-kit": "^0.20.4",
		"eslint": "^8.54.0",
		"eslint-plugin-jest": "^27.6.0",
		"eslint-plugin-jest-dom": "^5.1.0",
		"eslint-plugin-jsx-a11y": "^6.8.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-testing-library": "^6.1.2",
		"happy-dom": "^12.10.3",
		"husky": "^8.0.3",
		"lint-staged": "^15.1.0",
		"prettier": "^3.1.0",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.2.2",
		"vite": "^5.0.0",
		"vite-tsconfig-paths": "^4.2.1",
		"vitest": "^0.34.6"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
