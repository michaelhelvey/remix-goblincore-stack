{
	"name": "remix-goblincore-stack",
	"author": "Michael Helvey",
	"version": "1.0.0",
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-p \"build:*\"",
		"build:server": "tsc -p tsconfig.server.json",
		"build:remix": "remix build",
		"dev": "run-p \"dev:*\"",
		"dev:node": "cross-env NODE_ENV=development nodemon --require dotenv/config ./server/main.ts",
		"dev:remix": "remix watch",
		"start": "cross-env NODE_ENV=production node ./build/server/main.js",
		"typecheck": "tsc",
		"clean": "rm -rf build public/build .cache"
	},
	"dependencies": {
		"@remix-run/node": "^1.14.3",
		"@remix-run/react": "^1.14.3",
		"@types/node": "^18.15.3",
		"cross-env": "^7.0.3",
		"isbot": "^3.6.7",
		"koa": "^2.14.1",
		"koa-logger": "^3.2.1",
		"koa-static": "^5.0.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"remix-koa-adapter": "^1.0.1",
		"tiny-invariant": "^1.3.1",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.14.3",
		"@remix-run/eslint-config": "^1.14.3",
		"@testing-library/dom": "^9.0.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/koa": "^2.13.5",
		"@types/koa-logger": "^3.1.2",
		"@types/koa-static": "^4.0.2",
		"@types/prettier": "^2.7.2",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@types/testing-library__jest-dom": "^5.14.5",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"@vitejs/plugin-react": "^3.1.0",
		"@vitest/coverage-istanbul": "^0.29.3",
		"dotenv": "^16.0.3",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-jest-dom": "^4.0.3",
		"eslint-plugin-jsx-a11y": "^6.7.1",
